<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMainDark</item>
        <item name="colorPrimaryDark">@color/colorMainDark</item>
        <item name="colorAccent">@color/colorMainOrange</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowFixedWidthMinor">100%</item>
        <item name="windowFixedHeightMajor">80%</item>
    </style>

    <style name="RaintBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/prettyPink</item>
        <item name="colorControlActivated">@color/colorMainDark</item>
    </style>

</resources>
