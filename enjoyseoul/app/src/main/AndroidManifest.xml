<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.tlaabs.enjoyseoul">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/SplashTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SearchActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".GenrePickDialog"
            android:theme="@style/DialogTheme" />
        <activity
            android:name=".RegionPickDialog"
            android:theme="@style/DialogTheme" />
        <activity
            android:name=".SearchResultActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".DetailEventActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".WriteReviewActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".FlexListActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PopularActivity"
            android:theme="@style/AppTheme" />

        <!--kakao link-->
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key" />
        <!--google map-->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/gmap_api_key"/>

        <activity android:name=".MapActivity"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>